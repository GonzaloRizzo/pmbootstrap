pkgname=postmarketos-base
pkgver=2
pkgrel=4
pkgdesc="Meta package for minimal postmarketos base"
url="https://github.com/postmarketOS"
arch="noarch"
license="GPL3+"
depends="alpine-base haveged cryptsetup wpa_supplicant iw openssh mosh
tmux htop nano postmarketos-mkinitfs eudev sudo networkmanager"
makedepends=""
install="$pkgname.post-install"
subpackages=""
source="sudoers networkmanager.conf $install"
options="!check"

package() {
	install -D -m644 "$srcdir"/sudoers \
		"$pkgdir"/etc/sudoers.d/postmarketos
	install -D -m644 "$srcdir"/networkmanager.conf \
		"$pkgdir"/etc/NetworkManager/conf.d/postmarketos.conf
}
