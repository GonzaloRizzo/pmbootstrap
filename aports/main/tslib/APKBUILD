pkgname=tslib
pkgver=1.12
pkgrel=0
pkgdesc="Touchscreen Access Library"
arch="all"
url="https://github.com/kergoth/tslib"
license="GPL2"
makedepends="autoconf automake libtool linux-headers"
source="https://github.com/kergoth/tslib/releases/download/$pkgver/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

build() {
    cd $srcdir/$pkgname-$pkgver
    ./autogen.sh
    ./configure --prefix=/usr --sysconfdir=/etc
    make
}

package() {
    cd $srcdir/$pkgname-$pkgver
    make DESTDIR="$pkgdir" install
}
sha512sums="417315496ab668ed82a84487986580cc9bd69288c3344e38cb12578ede90a3d16c9ab84362b2b12ebdc70847a0a380249f434210b6c28bda2b1f6685ab96acf8  tslib-1.12.tar.xz"
